import React from 'react';
import Preference from './Preference';
import { Link } from "react-router-dom";

function TestComponent1({ addPreference, preferenceList, deletePreference }) {

    return (
        <div className="col-md-3 white-text ingredients_pane">
            <div className="container">

                <div className="row pt-5 text-center">
                    <h2>Preferences</h2>
                    
                    <div className="horiz_line"></div>
                </div>

                <div className="row">

                    {preferenceList.length === 0 && <div style={{textAlign: "center"}}>No Preferences</div>}
                    {preferenceList.map(this_preference => {
                    return (
                        <Preference {/* usnsure if need to import and make as a capital letter */}
                        {...this_preference}
                        key={preference.id}
                        deletePreference={deletePreference}
                        />
                        )
                    })}

                </div>
                <Link className="react_link" to="/testComponent1">
                    <button type="button" className="btn btn-light btn-lg" id="change-button" style={{ fontSize: '15px' }}>test</button>
                </Link>
            </div>
        </div>
    );
}

export default TestComponent1;
